<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joaquin.dijep_test.MainActivity$PlaceholderFragment">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView_cities"
        android:divider="#000000"
        android:dividerHeight="1sp">
    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textView_noCountrySelected"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="50dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_cities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@android:drawable/ic_input_add"
        android:layout_alignBottom="@+id/listView_cities"
        android:layout_alignRight="@+id/listView_cities"
        android:layout_alignEnd="@+id/listView_cities"
        android:layout_marginBottom="45dp" />

</RelativeLayout>